{
  "name": "ollama-tools",
  "version": "1.0.0",
  "description": "Lightweight agent loop that lets Ollama call local MCP tools from ksp-mcp",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:old": "node agent.js",
    "dev": "tsx src/index.ts",
    "debug": "DEBUG=1 tsx src/index.ts",
    "debug:old": "DEBUG=1 node agent.js",
    "lint": "eslint src/",
    "lint:old": "eslint agent.js",
    "typecheck": "tsc --noEmit",
    "knip": "knip",
    "test-phonetics": "tsx src/test-phonetics.ts"
  },
  "keywords": [
    "ollama",
    "mcp",
    "agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "dotenv": "^16.4.5",
    "hear-say": "file:../hear-say",
    "stopword": "^3.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.0.0",
    "@types/stopword": "^2.0.3",
    "eslint": "^9.39.2",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "knip": "^5.76.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0"
  }
}
